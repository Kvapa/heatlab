<h3><%= link_to 'Projekty', projects_path %> > <%= Project.find(params[:project_id]).workname %> > <%= link_to 'Akce', project_events_path(@project) %> </h3>
<p>

<%= link_to 'Nová akce', new_project_event_path %> | <%= link_to 'Skupiny pro akce', project_eventgroups_path(@project) %>
</p>
<table>
  <tr>
    <th>Název</th>
    <th>Popis</th>
    <th>Od</th>
    <th>Do</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.day.strftime('%d.%m.%Y') %></td>
    <td><%= event.date_until.strftime('%d.%m.%Y') %></td>
    <td><%= link_to 'Editovat', edit_project_event_path(@project,event) %></td>
    <td><%= link_to 'Smazat', project_event_path(@project,event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


